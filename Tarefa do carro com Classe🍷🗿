class Carro():

    status_motor = False
    status_andar = False

    def ligar_motor(self):
        self.status_motor = True
        print('Vrum,vrum')

    def desligar_motor(self):
        self.status_motor = False

    def andar(self):
        if self.status_motor == True:
            self.status_andar = True
            return 'O carro est치 andando'
        else:
            return 'Precisa ligar o motor'
        
    def parar(self):
        self.status_andar = False
        return 'O carro parou'
    
    def status(self):
        if self.status_andar:
            a = 'em movimento'
        else:
            a = 'parado'
        if self.status_motor:
            b = 'O motor est치 ligado'
        else:
            b = 'O motor est치 desligado'
        print(f'{b} e o carro est치 {a}\n')
    
carrinho = Carro()

